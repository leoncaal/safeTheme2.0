<!--Brand Area Start-->
  {% if section.settings.heading != blank %} 
  <div class="blog-title module-title mt-0">
    <h2>{{ section.settings.heading }}</h2>
  </div>
  {% endif %}
<div class="brand-slider">
  <div class="swiper-viewport">
    {% if section.blocks.size > 0 %}
    <div id="banner{{section.id}}" class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
          {% if block.settings.link != blank %}          
          <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
            {% endif %}
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="" class="img-responsive" />
            {% endif %}
            {% if block.settings.link != blank %}          
          </a>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- navigation buttons -->

    <!--<div id="js-prev1" class="swiper-button-prev"></div>
    <div id="js-next1" class="swiper-button-next"></div>-->
  </div>
  {% endif %}
</div>
<script >
  $(document).ready(function() {
    $('#banner{{section.id}}').swiper({
      slidesPerView: 5,
      spaceBetween: 10,
      autoplay: true,
      loop: true,
      speed: 2000,
      autoplayDisableOnInteraction: true,
      // navigation arrows
      nextButton: '#js-next1',
      prevButton: '#js-prev1',
      // Responsive breakpoints
      breakpoints: {
      479: {
      slidesPerView: 2
      },
      767: {
      slidesPerView: 3
      },
      991: {
      slidesPerView: 4

      },
      1200: {
      slidesPerView: 5

      }
      }
      });
    });
</script> 
<!--End of Brand Area-->