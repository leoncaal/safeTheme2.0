<div id="newsletter-popup-conatiner" style="display:none">
  <div id="newsletter-pop-up">
    {% if settings.show_pupup_url %}
      <a href="{{ settings.popup_url_link }}">
        <img src="{{ 'popup_img.png' | asset_url }}" style="position: absolute;" />
      </a>
    {% else %}
        <img src="{{ 'popup_img.png' | asset_url }}" style="position: absolute;" />
    {% endif %}
    <span class="hide-popup">X</span>
    <div class="subscribe-pop-up" style="margin: 100% 0px 0px 0px; position: relative;">
      <div class="subscribe-bottom" style ="background: white; padding-left: 5px;">
        <input type="checkbox" id="dont_show" name="dont_show">
        <label for="dont_show"><b>{{ settings.popup_no_link_text }}</b></label>
      </div>
    </div>
  </div>
</div>

